                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock FontWeight="SemiBold" Text="{x:Bind DisplayKey}" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Text="{x:Bind Value}"
                    TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>


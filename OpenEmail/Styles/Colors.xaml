<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:OpenEmail.Styles">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Name="Light">
            <SolidColorBrush x:Key="InfoMessagePanelBackground" Color="#f4f6fa" />
            <SolidColorBrush x:Key="GeneralSeperatorBrush" Color="#282c34" />
            <SolidColorBrush x:Key="AlternateBackgroundBrush" Color="#fcfdfe" />
            <SolidColorBrush x:Key="SaveProfileButtonBackgroundBrush" Color="#fcfdfe" />
            <SolidColorBrush x:Key="AttachmentDropBackgroundBrush" Color="#f4f6fa" />
            <SolidColorBrush x:Key="BroadcastTagForegroundBrush" Color="#f6b93b" />
            <SolidColorBrush x:Key="DetailForegroundBrush" Color="#576574" />
            <ImageSource x:Key="LogoImageSource">/Assets/openemail_logo.light.png</ImageSource>
        </ResourceDictionary>

        <ResourceDictionary x:Name="Dark">
            <SolidColorBrush x:Key="InfoMessagePanelBackground" Color="#2c2c2c" />
            <SolidColorBrush x:Key="GeneralSeperatorBrush" Color="#4d4d4d" />
            <SolidColorBrush x:Key="AlternateBackgroundBrush" Color="#2f3640" />
            <SolidColorBrush x:Key="SaveProfileButtonBackgroundBrush" Color="#222f3e" />
            <SolidColorBrush x:Key="AttachmentDropBackgroundBrush" Color="#323232" />
            <SolidColorBrush x:Key="BroadcastTagForegroundBrush" Color="#f6b93b" />
            <SolidColorBrush x:Key="DetailForegroundBrush" Color="#c8d6e5" />
            <ImageSource x:Key="LogoImageSource">/Assets/openemail_logo.dark.png</ImageSource>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>

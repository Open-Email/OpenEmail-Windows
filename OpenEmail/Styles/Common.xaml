<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenEmail.Styles">

    <Style x:Key="SettingContentGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="20" />
        <Setter Property="RowSpacing" Value="12" />
        <Setter Property="ColumnSpacing" Value="12" />
    </Style>


    <!--  Default page style.  -->
    <Style TargetType="Page">
        <Setter Property="Background" Value="{ThemeResource ContentBackgroundBrush}" />
    </Style>

</ResourceDictionary>

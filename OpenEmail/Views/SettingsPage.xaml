                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Bind}" TextWrapping="Wrap" />

                                            <Button
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Command="{Binding ElementName=root, Path=ViewModel.DeleteTrustedDomainCommand}"
                                                CommandParameter="{Binding}"
                                                Content="Remove" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  No domains  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="You don't have any trusted domains."
                                Visibility="{x:Bind ViewModel.HasNoTrustedDomain, Mode=OneWay}" />
                        </Grid>
                    </Grid>

                    <!--  Keys  -->
                    <Grid RowSpacing="8" Visibility="{x:Bind ViewModel.IsKeysSectionVisible, Mode=OneWay}">
                        <!--  QR  -->

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                            Width="200"
                            Height="200"
                            Padding="12"
                            Background="White"
                            CornerRadius="8">
                            <Image Source="{x:Bind ViewModel.QrImage, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
                            <!--<TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="Red"
                                Text="QR Here" />-->
                        </Grid>

                        <Grid Grid.Row="1" RowSpacing="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Private  -->
                            <TextBlock
                                Margin="4,0,0,12"
                                FontWeight="Bold"
                                Text="Private Keys" />

                            <Grid Grid.Row="1" Style="{StaticResource KeyGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    FontWeight="Bold"
                                    Text="Private Signing" />

                                <TextBlock
                                    Grid.Row="1"
                                    IsTextSelectionEnabled="True"
                                    Text="{x:Bind ViewModel.PrivateSigningKey}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Grid.Row="2" Style="{StaticResource KeyGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="1"
                                    FontWeight="Bold"
                                    Text="Private Encryption" />

                                <TextBlock
                                    Grid.Row="2"
                                    IsTextSelectionEnabled="True"
                                    Text="{x:Bind ViewModel.PrivateEncryptionKey}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <!--  Public  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="4,20,0,12"
                                FontWeight="Bold"
                                Text="Public Keys" />

                            <Grid Grid.Row="4" Style="{StaticResource KeyGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="1"
                                    FontWeight="Bold"
                                    Text="Public Signing" />

                                <TextBlock
                                    Grid.Row="2"
                                    IsTextSelectionEnabled="True"
                                    Text="{x:Bind ViewModel.PublicSigningKey}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Grid.Row="5" Style="{StaticResource KeyGridStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="1"
                                    FontWeight="Bold"
                                    Text="Public Encryption" />

                                <TextBlock
                                    Grid.Row="2"
                                    IsTextSelectionEnabled="True"
                                    Text="{x:Bind ViewModel.PublicEncryptionKey}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:SettingsPageAbstract>

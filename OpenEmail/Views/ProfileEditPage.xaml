            Padding="20"
            RowSpacing="12"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsGeneralSettingsVisible, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MaxWidth="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  avatar  -->

                    </Button>
                </StackPanel>
            </Grid>

            <!--  Status etc.  -->
            <Grid
                Grid.Column="1"
                Padding="12"
                RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        VerticalAlignment="Top"
                        Header="Name"
                        Text="{x:Bind ViewModel.Name, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                    <ToggleSwitch
                        x:Name="AwayToggle"
                        Grid.Column="1"
                        MinWidth="0"
                        Margin="0,4,0,0"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        Header=" "
                        IsOn="{x:Bind ViewModel.IsAway, Mode=TwoWay}"
                        OffContent="Away"
                        OnContent="Away" />
                </Grid>

                <TextBox
                    Grid.Row="1"
                    AcceptsReturn="True"
                    Header="Away Message"
                    IsEnabled="{x:Bind ViewModel.IsAwayMessageAvailable, Mode=OneWay}"
                    PlaceholderText="Enter a message here to display contacts when you are away"
                    Text="{x:Bind ViewModel.AwayMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="{x:Bind AwayToggle.IsOn, Mode=OneWay}" />

                <Grid
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Top"
                    RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox
                        Header="Status"
                        PlaceholderText="Share your mood, plans etc."
                        Text="{x:Bind ViewModel.Status, Mode=TwoWay}" />
                    <TextBox
                        x:Name="AboutTextBox"
                        Grid.Row="1"
                        AcceptsReturn="True"
                        Header="About"
                        MaxLength="100"
                        PlaceholderText="Message"
                        Text="{x:Bind ViewModel.About, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <Run Text="{x:Bind ViewModel.AboutMessageMaxLength, Mode=OneWay}" /><Run Text="/" /><Run Text="100" />
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>

        <!--  Personal  -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsPersonalSettingsVisible, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox
                    Header="Gender"
                    PlaceholderText="Enter your gender"
                    Text="{x:Bind ViewModel.Gender, Mode=TwoWay}" />

                <CalendarDatePicker
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Date="{x:Bind ViewModel.BirthDay, Mode=TwoWay, Converter={StaticResource DateConverter}}"
                    Header="Birthday"
                    HeaderTemplate="{StaticResource GeneralHeaderTemplate}" />

                <TextBox
                    Grid.Row="2"
                    Header="Languages"
                    PlaceholderText="Enter language"
                    Text="{x:Bind ViewModel.Languages, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Column="1" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox
                    Header="Relationship Status"
                    PlaceholderText="Single, Married, Divocerd, Separated ..."
                    Text="{x:Bind ViewModel.RelationshipStatus, Mode=TwoWay}" />

                <TextBox
                    Grid.Row="1"
                    Header="Education"
                    PlaceholderText="Enter your education"
                    Text="{x:Bind ViewModel.Education, Mode=TwoWay}" />

                <TextBox
                    Grid.Row="2"
                    Header="Places Lived"
                    PlaceholderText="Enter places"
                    Text="{x:Bind ViewModel.PlacesLived, Mode=TwoWay}" />
            </Grid>

            <TextBox
                Grid.Row="2"
                Grid.ColumnSpan="2"
                MinHeight="200"
                AcceptsReturn="True"
                Header="Notes"
                PlaceholderText="Message"
                Text="{x:Bind ViewModel.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Run Text="{x:Bind ViewModel.NotesMessageLength, Mode=OneWay}" /><Run Text="/" /><Run Text="100" />
            </TextBlock>
        </Grid>

        <!--  Work  -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsWorkSettingsVisible, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox
                    Header="Work"
                    PlaceholderText="Enter your work"
                    Text="{x:Bind ViewModel.Work, Mode=TwoWay}" />
                <TextBox
                    Grid.Row="1"
                    Header="Department"
                    PlaceholderText="Enter your department"
                    Text="{x:Bind ViewModel.Department, Mode=TwoWay}" />
            </Grid>

            <Grid Grid.Column="1" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox
                    Header="Organization"
                    PlaceholderText="Enter your organization"
                    Text="{x:Bind ViewModel.Organization, Mode=TwoWay}" />
                <TextBox
                    Grid.Row="1"
                    Header="Job Title"
                    PlaceholderText="Enter your job"
                    Text="{x:Bind ViewModel.JobTitle, Mode=TwoWay}" />
            </Grid>
        </Grid>

        <!--  Interests  -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsInteretesSettingsVisible, Mode=OneWay}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox
                Grid.ColumnSpan="2"
                Header="Interests"
                PlaceholderText="Enter your interests"
                Text="{x:Bind ViewModel.Interests, Mode=TwoWay}" />

            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Header="Books"
                        PlaceholderText="Enter your favorite books"
                        Text="{x:Bind ViewModel.Books, Mode=TwoWay}" />
                    <TextBox
                        Grid.Row="1"
                        Header="Music"
                        PlaceholderText="Enter your favorite music"
                        Text="{x:Bind ViewModel.Music, Mode=TwoWay}" />
                </Grid>

                <Grid Grid.Column="1" RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Header="Movies"
                        PlaceholderText="Enter your favorite movies"
                        Text="{x:Bind ViewModel.Movies, Mode=TwoWay}" />
                    <TextBox
                        Grid.Row="1"
                        Header="Sports"
                        PlaceholderText="Enter your favorite kind of sports"
                        Text="{x:Bind ViewModel.Sports, Mode=TwoWay}" />
                </Grid>

            </Grid>
        </Grid>

        <!--  Contacts  -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsContactsSettingsVisible, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox
                Header="Website"
                PlaceholderText="Enter your website"
                Text="{x:Bind ViewModel.Website, Mode=TwoWay}" />
            <TextBox
                Grid.Row="1"
                Header="Mailing Address"
                PlaceholderText="Enter your mailing address"
                Text="{x:Bind ViewModel.MailingAddress, Mode=TwoWay}" />

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Header="Location"
                PlaceholderText="Enter your location"
                Text="{x:Bind ViewModel.Location, Mode=TwoWay}" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Header="Phone"
                PlaceholderText="Enter your phone number"
                Text="{x:Bind ViewModel.Phone, Mode=TwoWay}" />

            <TextBox
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Header="Streams"
                PlaceholderText="Enter your streams"
                Text="{x:Bind ViewModel.Streams, Mode=TwoWay}" />
        </Grid>

        <!--  Configuration  -->
        <Grid
            Grid.Row="2"
            Style="{StaticResource SettingContentGridStyle}"
            Visibility="{x:Bind ViewModel.IsConfigurationSettingsVisible, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ToggleSwitch
                IsOn="{x:Bind ViewModel.PublicAccess, Mode=TwoWay}"
                OffContent="Public access"
                OnContent="Public access" />
            <ToggleSwitch
                Grid.Row="1"
                IsOn="{x:Bind ViewModel.PublicLinkQuerying, Mode=TwoWay}"
                OffContent="Public link querying"
                OnContent="Public link querying" />
            <ToggleSwitch
                Grid.Row="2"
                IsOn="{x:Bind ViewModel.PublicLastSeen, Mode=TwoWay}"
                OffContent="Last seen public"
                OnContent="Last seen public" />
            <TextBox
                Grid.Row="3"
                Header="Address Expansion"
                PlaceholderText="Enter address expansion"
                Text="{x:Bind ViewModel.AddressExpansion, Mode=TwoWay}" />
        </Grid>

    </Grid>
</local:ProfileEditPageAbstract>

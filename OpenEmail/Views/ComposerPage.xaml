                    </Viewbox>
                </Button>

                <!--  Close  -->
                <Button
                    Click="CloseClicked"
                    IsTabStop="False"
                    Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <PathIcon
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
